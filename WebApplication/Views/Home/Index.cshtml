@model IEnumerable<WebApplication.Models.DataModel>

@{
    ViewData["Title"] = "Index";
}

<h4 class="text-uppercase text-center">List of Data</h4>

<p>
    <a asp-action="Create" class="btn btn-primary rounded-0"><i class="fa-solid fa-plus"></i> Add New</a>
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Gender)</th>
            <th>@Html.DisplayNameFor(model => model.Nationality)</th>
            <th>@Html.DisplayNameFor(model => model.Education)</th>
            <th>@Html.DisplayNameFor(model => model.Skills)</th>
            <th>@Html.DisplayNameFor(model => model.Experience)</th>
            <th>Action(s)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                <td>@Html.DisplayFor(modelItem => item.Nationality)</td>
                <td>@Html.DisplayFor(modelItem => item.Education)</td>
                <td>@Html.DisplayFor(modelItem => item.Skills)</td>
                <td>@Html.DisplayFor(modelItem => item.Experience)</td>
                <td>
                    <a href="@Url.Action("Details", "Home", new { id = item.Id })" class="btn btn-sm btn-info">View Data</a>
                    <a href="@Url.Action("Edit", "Home", new { id = item.Id })" class="btn btn-sm btn-primary">Edit Data</a>
                    <a href="@Url.Action("Delete", "Home", new { id = item.Id })" class="btn btn-sm btn-danger">Delete Data</a>
                </td>
            </tr>
        }
    </tbody>
</table>
